{{#partial "contenido"}}

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page">Guardarropas</li>
  </ol>
</nav>

<div class="container d-flex p-2 flex-wrap justify-content-center">
  {{#each guardarropas}}
  <div class="card-container col-sm-3 m-3" style="display: inline-block">
    <a href="/wardrobes/{{id_guardarropa}}" style="color: inherit">
      <div class="card border rounded-sm shadow m-sm-auto p-sm-auto">
        <img src="/img/wardrobe1.png" class="card-img-top" alt="Guardarropa">
        <div class="card-body">
          <p class="card-title">
            <h3>{{nombre}}</h3>
          </p>
        </div>
      </div>
    </a>
  </div>
  {{/each}}
</div>
{{/partial}}

{{> layout.hbs}}