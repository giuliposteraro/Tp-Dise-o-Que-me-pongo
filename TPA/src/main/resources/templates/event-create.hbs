{{#partial "contenido"}}
<div class="container">
<form method="POST" action="/calendar/new">
  <div class="form-group">
    <label for="exampleInputEmail1">Motivo</label>
    <input type="text" class="form-control" placeholder="Ingrese el motivo" name="motivo">
  </div>

  <div class="form-group">
    <label for="exampleInputEmail1">Lugar</label>
    <input type="text" class="form-control" placeholder="Ingrese el lugar" name="lugar">
  </div>

  <div class="form-group">
    <label for="exampleInputEmail1">Fecha</label>
    <input type="date" class="form-control" placeholder="Ingrese la fecha" name="fecha">
  </div>

  <div class="form-group">
    <label for="frecuencia">Frecuencia</label>
    <select class="form-control" id="frecuencia" name="frecuencia">
      <option value="null">Seleccione una frecuencia</option>
      {{#each frecuencias}}
          <option  value="{{this}}">{{this}}</option>
      {{/each}}
    </select>
  </div>

  <div class="form-group">
    <label for="frecuencia">Guardarropas</label>
    <select class="form-control" id="guardarropa" name="guardarropa">
      <option value="null">Seleccione un guardarropa</option>
      {{#each guardarropas}}
          <option  value="{{id_guardarropa}}">{{nombre}}</option>
      {{/each}}
    </select>
  </div>

  <button type="submit" class="btn btn-primary">Crear</button>
</form>
</div>
{{/partial}}

{{> layout.hbs}}
