{{#partial "contenido"}}
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page">Calendario</li>
  </ol>
</nav>

<div class="container">
  <div class="my-3 d-flex">
    <div class="col-sm">
      <h2>Eventos</h2>
    </div>
    <div class="col-sm-3">
      <a class="btn btn-primary" href="/calendar/new" role="button">Agregar evento</a>
    </div>
  </div>
  <ul class="list-group">
    {{#each eventos}}
    <li class="list-group-item">
      <p>{{motivo}}</p>
    </li>
    {{/each}}
  </ul>
</div>

{{/partial}}
{{> layout.hbs}}